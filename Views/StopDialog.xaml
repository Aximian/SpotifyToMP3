<Window x:Class="SpotifyToMP3.Views.StopDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stop Downloads" Height="250" Width="600"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
        <Border Background="{StaticResource SurfaceColor}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="2"
            CornerRadius="15"
            Padding="40">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="⏹️ Stop Downloads?" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="MessageText"
                           Text="Are you sure you want to stop all downloads?" 
                           FontSize="14" 
                           Foreground="{StaticResource SecondaryTextColor}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button x:Name="CancelButton"
                        Content="Continue Downloading" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="40" 
                        MinWidth="180" 
                        Margin="0,0,15,0"
                        Click="CancelButton_Click"/>
                <Button x:Name="StopButton"
                        Content="⏹️ Stop All" 
                        Style="{StaticResource AccentButtonStyle}"
                        Height="40" 
                        MinWidth="150"
                        Click="StopButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

