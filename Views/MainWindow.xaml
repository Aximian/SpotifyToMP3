<Window x:Class="SpotifyToMP3.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spotify to MP3 Converter" Height="750" Width="1100"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="TrackCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CardHoverColor}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Gradient -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="ðŸŽµ Spotify to MP3" 
                           FontSize="42" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#1DB954" Direction="270" ShadowDepth="3" BlurRadius="10" Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Convert your favorite Spotify tracks to MP3" 
                           FontSize="16" 
                           Foreground="{StaticResource SecondaryTextColor}"
                           Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                <Button x:Name="OpenFolderButton"
                        Content="ðŸ“ Open Folder" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="40" 
                        MinWidth="130" 
                        Margin="0,0,10,0"
                        Click="OpenFolderButton_Click"/>
                <Button x:Name="SettingsButton"
                        Content="âš™ï¸ Settings" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="40" 
                        MinWidth="120" 
                        Click="SettingsButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Search Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,25">
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" 
                        CornerRadius="12" 
                        Background="{StaticResource SurfaceColor}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1">
                    <TextBox x:Name="SearchTextBox"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="50"
                             VerticalContentAlignment="Center"
                             KeyDown="SearchTextBox_KeyDown"
                             TextChanged="SearchTextBox_TextChanged">
                        <TextBox.ToolTip>
                            <ToolTip Content="Enter a song name, artist, or paste a Spotify track/playlist URL. Plain text will search Spotify for similar songs."/>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsFocused}" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
                
                <Button x:Name="SearchButton" Grid.Column="1"
                        Content="ðŸ” Search" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="50" 
                        MinWidth="130" 
                        Margin="15,0,0,0"
                        Click="SearchButton_Click"/>
            </Grid>
            
            <!-- Filter/Search for loaded tracks -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" 
                        CornerRadius="10" 
                        Background="{StaticResource SurfaceColor}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1">
                    <TextBox x:Name="FilterTextBox"
                             Height="42"
                             FontSize="13"
                             VerticalContentAlignment="Center"
                             TextChanged="FilterTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=ResultsList, Path=Items.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                        <TextBox.ToolTip>
                            <ToolTip Content="Filter tracks by title, artist, or album"/>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=FilterTextBox, Path=IsFocused}" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0,0,0">
                    <Button x:Name="DownloadAllButton"
                            Content="â¬‡ï¸ Download All" 
                            Height="42" 
                            MinWidth="150" 
                            Margin="0,0,10,0"
                            Click="DownloadAllButton_Click"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="StopDownloadButton"
                            Content="â¹ï¸ Stop" 
                            Height="42" 
                            MinWidth="120" 
                            Click="StopDownloadButton_Click"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Results List -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceColor}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="15">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled"
                            Padding="15">
                    <ItemsControl x:Name="ResultsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TrackCardStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Album Art Image -->
                                        <Border Grid.Column="0" 
                                                Width="80" 
                                                Height="80" 
                                                CornerRadius="8"
                                                Background="{StaticResource CardColor}"
                                                BorderBrush="{StaticResource BorderColor}"
                                                BorderThickness="1"
                                                Margin="0,0,20,0"
                                                VerticalAlignment="Center">
                                            <Image Stretch="UniformToFill"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center">
                                                <Image.Source>
                                                    <Binding Path="ImageUrl">
                                                        <Binding.TargetNullValue>
                                                            <x:Null/>
                                                        </Binding.TargetNullValue>
                                                    </Binding>
                                                </Image.Source>
                                            </Image>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title}" 
                                                       FontSize="18" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextColor}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock Text="{Binding Artist}" 
                                                       FontSize="15"
                                                       Foreground="{StaticResource PrimaryColor}"
                                                       FontWeight="Medium"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Album}" 
                                                       FontSize="13"
                                                       Foreground="{StaticResource SecondaryTextColor}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,8"/>
                                            
                                            <!-- Progress Bar -->
                                            <Grid Visibility="{Binding ShowProgress}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Row="0"
                                                           Text="{Binding ProgressText}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource SecondaryTextColor}"
                                                           Margin="0,0,0,4"/>
                                                
                                                <Border Grid.Row="1"
                                                        Background="{StaticResource CardColor}"
                                                        CornerRadius="3"
                                                        Height="6"
                                                        Name="ProgressBarContainer">
                                                    <Border Background="{StaticResource PrimaryColor}"
                                                            CornerRadius="3"
                                                            HorizontalAlignment="Left"
                                                            Width="{Binding ProgressWidth}"/>
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="2" 
                                                Content="{Binding DownloadButtonText}"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                MinWidth="140"
                                                Padding="20,10"
                                                Click="DownloadButton_Click"
                                                Tag="{Binding}"
                                                IsEnabled="{Binding CanDownload}"
                                                VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Empty State -->
                <TextBlock x:Name="EmptyStateText"
                           Text="ðŸŽµ Search for tracks, or paste a Spotify track/playlist URL to get started"
                           FontSize="18"
                           Foreground="{StaticResource SecondaryTextColor}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Visibility="Collapsed">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=ResultsList, Path=Items.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{StaticResource SurfaceColor}"
                CornerRadius="10"
                Padding="15,12"
                Margin="0,25,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="â— " 
                               FontSize="12"
                               Foreground="{StaticResource PrimaryColor}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText"
                               Text="Ready to search..."
                               FontSize="14"
                               Foreground="{StaticResource TextColor}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <ProgressBar x:Name="ProgressBar" Grid.Column="1"
                             Width="250" 
                             Height="8"
                             Visibility="Collapsed"
                             Foreground="{StaticResource PrimaryColor}"
                             Background="{StaticResource CardColor}"
                             BorderThickness="0">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4">
                                            <Border x:Name="PART_Track" 
                                                    Background="{TemplateBinding Foreground}" 
                                                    CornerRadius="4"
                                                    HorizontalAlignment="Left"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
            </Grid>
        </Border>
    </Grid>
</Window>

