<Window x:Class="MediaConverterToMP3.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spotify/YT Converter to MP3" Height="750" Width="1100"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Closing="Window_Closing">
    <Window.Resources>
        <Style x:Key="TrackCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CardHoverColor}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="45" 
            ClipToBounds="True"
            Background="{StaticResource BackgroundColor}">
        <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Source Selector -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Source Selector -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,30,0" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Border x:Name="SpotifySelector"
                            Background="#1DB954"
                            CornerRadius="25"
                            Padding="20,12"
                            Margin="0,0,15,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="SourceSelector_MouseLeftButtonDown"
                            Tag="Spotify">
                        <Border.Effect>
                            <DropShadowEffect Color="#1DB954" Direction="270" ShadowDepth="3" BlurRadius="8" Opacity="0.5"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŽµ" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Spotify" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="YouTubeSelector"
                            Background="#282828"
                            CornerRadius="25"
                            Padding="20,12"
                            Cursor="Hand"
                            MouseLeftButtonDown="SourceSelector_MouseLeftButtonDown"
                            Tag="YouTube">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#333333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â–¶ï¸" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="YouTube" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#B3B3B3"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <!-- Format Selector (only for YouTube) -->
                <StackPanel x:Name="FormatSelectorPanel" 
                           Orientation="Horizontal" 
                           Visibility="Collapsed">
                    <Border x:Name="MP3FormatSelector"
                            Background="#1DB954"
                            CornerRadius="20"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="FormatSelector_MouseLeftButtonDown"
                            Tag="MP3">
                        <Border.Effect>
                            <DropShadowEffect Color="#1DB954" Direction="270" ShadowDepth="2" BlurRadius="6" Opacity="0.4"/>
                        </Border.Effect>
                        <TextBlock Text="MP3" 
                                   FontSize="13" 
                                   FontWeight="SemiBold" 
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border x:Name="MP4FormatSelector"
                            Background="#282828"
                            CornerRadius="20"
                            Padding="15,8"
                            Cursor="Hand"
                            MouseLeftButtonDown="FormatSelector_MouseLeftButtonDown"
                            Tag="MP4">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#333333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="MP4" 
                                   FontSize="13" 
                                   FontWeight="SemiBold" 
                                   Foreground="#B3B3B3"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock x:Name="TitleText" Text="ðŸŽµ Spotify/YT Converter to MP3" 
                           FontSize="42" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"
                           Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#1DB954" Direction="270" ShadowDepth="3" BlurRadius="10" Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="SubtitleText" Text="Convert your favorite Spotify tracks to MP3" 
                           FontSize="16" 
                           Foreground="{StaticResource SecondaryTextColor}"
                           Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                <Button x:Name="OpenFolderButton"
                        Height="40" 
                        MinWidth="170" 
                        Margin="0,0,10,0"
                        Click="OpenFolderButton_Click"
                        Style="{StaticResource PrimaryButtonStyle}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“ Open Folder" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <Path Data="M 0,0 L 5,5 L 10,0 Z" 
                              Fill="White" 
                              Stretch="Uniform"
                              Width="7"
                              Height="5"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              RenderOptions.BitmapScalingMode="HighQuality"/>
                    </StackPanel>
                </Button>
                <Button x:Name="SettingsButton"
                        Content="âš™ï¸ Settings" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="40" 
                        MinWidth="120" 
                        Click="SettingsButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Search Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,25">
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" 
                        CornerRadius="12" 
                        Background="{StaticResource SurfaceColor}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1">
                    <TextBox x:Name="SearchTextBox"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="50"
                             VerticalContentAlignment="Center"
                             KeyDown="SearchTextBox_KeyDown"
                             TextChanged="SearchTextBox_TextChanged">
                        <TextBox.ToolTip>
                            <ToolTip x:Name="SearchToolTip" Content="Enter a song name, artist, or paste a URL. Plain text will search for similar songs."/>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=IsFocused}" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
                
                <Button x:Name="SearchButton" Grid.Column="1"
                        Content="ðŸ” Search" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="50" 
                        MinWidth="130" 
                        Margin="15,0,0,0"
                        Click="SearchButton_Click"/>
            </Grid>
            
            <!-- Filter/Search for loaded tracks -->
            <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" 
                        CornerRadius="6" 
                        Background="{StaticResource SurfaceColor}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1">
                    <TextBox x:Name="FilterTextBox"
                             Height="28"
                             FontSize="12"
                             VerticalContentAlignment="Center"
                             Padding="8,4"
                             TextChanged="FilterTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=ResultsList, Path=Items.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                        <TextBox.ToolTip>
                            <ToolTip Content="Filter tracks by title, artist, or album"/>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=FilterTextBox, Path=IsFocused}" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
                
                <!-- Filter Icon -->
                <Image x:Name="FilterIcon"
                       Grid.Column="1"
                       Width="24"
                       Height="24"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"
                       Stretch="Uniform">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=FilterTextBox, Path=Visibility}" Value="Visible">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                
                <Grid Grid.Column="2" Margin="15,0,0,0" MinWidth="130">
                    <Button x:Name="DownloadAllButton"
                            Content="Download All" 
                            Height="42" 
                            MinWidth="120" 
                            Click="DownloadAllButton_Click"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </StackPanel>

        <!-- Results List -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceColor}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="15">
            <Grid>
                <ScrollViewer x:Name="ResultsScrollViewer"
                            Style="{StaticResource ModernScrollViewerStyle}"
                            VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled"
                            Padding="15"
                            PanningMode="VerticalOnly"
                            IsDeferredScrollingEnabled="False">
                    <ItemsControl x:Name="ResultsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TrackCardStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Album Art Image -->
                                        <Border Grid.Column="0" 
                                                Width="80" 
                                                Height="80" 
                                                CornerRadius="8"
                                                Background="{StaticResource CardColor}"
                                                BorderBrush="{StaticResource BorderColor}"
                                                BorderThickness="1"
                                                Margin="0,0,20,0"
                                                VerticalAlignment="Center">
                                            <Image Stretch="UniformToFill"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   RenderOptions.BitmapScalingMode="LowQuality"
                                                   RenderOptions.CachingHint="Cache">
                                                <Image.Source>
                                                    <Binding Path="ImageUrl">
                                                        <Binding.TargetNullValue>
                                                            <x:Null/>
                                                        </Binding.TargetNullValue>
                                                    </Binding>
                                                </Image.Source>
                                            </Image>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title}" 
                                                       FontSize="18" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextColor}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock Text="{Binding Artist}" 
                                                       FontSize="15"
                                                       Foreground="{StaticResource PrimaryColor}"
                                                       FontWeight="Medium"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Album}" 
                                                       FontSize="13"
                                                       Foreground="{StaticResource SecondaryTextColor}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,4"/>
                                            
                                            <!-- Duration and Size -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="â±ï¸ " 
                                                           FontSize="12"
                                                           Foreground="{StaticResource SecondaryTextColor}"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding FormattedDuration}" 
                                                           FontSize="12"
                                                           Foreground="{StaticResource SecondaryTextColor}"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,15,0"/>
                                                <TextBlock Text="ðŸ“¦ " 
                                                           FontSize="12"
                                                           Foreground="{StaticResource SecondaryTextColor}"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding EstimatedSize}" 
                                                           FontSize="12"
                                                           Foreground="{StaticResource SecondaryTextColor}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                            
                                            <!-- Progress Bar -->
                                            <Grid Visibility="{Binding ShowProgress}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Row="0"
                                                           Text="{Binding ProgressText}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource SecondaryTextColor}"
                                                           Margin="0,0,0,4"/>
                                                
                                                <Border Grid.Row="1"
                                                        Background="{StaticResource CardColor}"
                                                        CornerRadius="3"
                                                        Height="6"
                                                        Name="ProgressBarContainer">
                                                    <Border Background="{StaticResource PrimaryColor}"
                                                            CornerRadius="3"
                                                            HorizontalAlignment="Left"
                                                            Width="{Binding ProgressWidth}"/>
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" 
                                                    VerticalAlignment="Center">
                                            <Button Tag="{Binding}"
                                                    Click="DownloadButton_Click"
                                                    MinWidth="140"
                                                    Padding="20,10"
                                                    Margin="0,0,0,10"
                                                    HorizontalAlignment="Stretch">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                                        <Setter Property="Content" Value="{Binding DownloadButtonText, FallbackValue='Download'}"/>
                                                        <Setter Property="IsEnabled" Value="{Binding CanDownload, FallbackValue=True}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDownloading, FallbackValue=False}" Value="True">
                                                                <Setter Property="Content" Value="â¹ï¸ Stop"/>
                                                                <Setter Property="Background" Value="{StaticResource StopButtonColor}"/>
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Tag="{Binding}"
                                                    Click="AddToSpotifyButton_Click"
                                                    MinWidth="140"
                                                    Padding="15,10"
                                                    HorizontalAlignment="Stretch">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SpotifyButtonText}" Value="Already in Spotify âœ“">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                <Setter Property="Opacity" Value="0.6"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding SpotifyButtonText}" Value="Successfully Added âœ“">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                <Setter Property="Opacity" Value="0.6"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <TextBlock Text="{Binding SpotifyButtonText, FallbackValue='Add to Spotify Local'}" 
                                                           FontSize="13"
                                                           TextWrapping="Wrap"
                                                           TextAlignment="Center"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Empty State -->
                <TextBlock x:Name="EmptyStateText"
                           Text="ðŸŽµ Search for tracks, or paste a Spotify track/playlist URL to get started"
                           FontSize="18"
                           Foreground="{StaticResource SecondaryTextColor}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Visibility="Collapsed">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=ResultsList, Path=Items.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{StaticResource SurfaceColor}"
                CornerRadius="10"
                Padding="15,12"
                Margin="0,25,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="â— " 
                               FontSize="12"
                               Foreground="{StaticResource PrimaryColor}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText"
                               Text="Ready to search..."
                               FontSize="14"
                               Foreground="{StaticResource TextColor}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <ProgressBar x:Name="ProgressBar" Grid.Column="1"
                             Width="250" 
                             Height="8"
                             Visibility="Collapsed"
                             Foreground="{StaticResource PrimaryColor}"
                             Background="{StaticResource CardColor}"
                             BorderThickness="0">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4">
                                            <Border x:Name="PART_Track" 
                                                    Background="{TemplateBinding Foreground}" 
                                                    CornerRadius="4"
                                                    HorizontalAlignment="Left"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
            </Grid>
        </Border>
    </Grid>
    </Border>
</Window>

