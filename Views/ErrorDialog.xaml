<Window x:Class="SpotifyToMP3.Views.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" Height="400" Width="650"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border Background="{StaticResource SurfaceColor}"
            BorderBrush="#FF4444"
            BorderThickness="2"
            CornerRadius="20"
            Padding="40">
        <Border.Effect>
            <DropShadowEffect Color="#FF0000" Direction="270" ShadowDepth="8" BlurRadius="20" Opacity="0.4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Icon -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25" HorizontalAlignment="Center">
                <TextBlock Text="⚠️"
                           FontSize="48"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="TitleText"
                           Text="Invalid URL" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="#FF6B6B"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Message -->
            <Border Grid.Row="1"
                    Background="{StaticResource CardColor}"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,20">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <TextBlock x:Name="MessageText"
                               Text="The URL you entered is not valid for the selected source." 
                               FontSize="15" 
                               Foreground="{StaticResource TextColor}"
                               TextWrapping="Wrap"
                               LineHeight="24"/>
                </ScrollViewer>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button x:Name="OkButton"
                        Content="OK" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="45" 
                        MinWidth="140"
                        FontSize="15"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

