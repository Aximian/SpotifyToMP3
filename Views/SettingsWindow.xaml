<Window x:Class="MediaConverterToMP3.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="600" Width="800"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="600">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Settings" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource TextColor}"
                   Margin="0,0,0,25"/>

        <!-- Spotify Credentials Section -->
        <TextBlock Grid.Row="1" 
                   Text="Spotify API Credentials" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   Foreground="{StaticResource TextColor}"
                   Margin="0,0,0,15"/>

        <!-- Client ID Label -->
        <TextBlock Grid.Row="2" 
                   Text="Client ID:" 
                   FontSize="14" 
                   Foreground="{StaticResource TextColor}"
                   Margin="0,0,0,8"/>

        <!-- Client ID Input -->
        <Border Grid.Row="3" 
                CornerRadius="8" 
                Background="{StaticResource SurfaceColor}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                Padding="15,12"
                MinHeight="45"
                Margin="0,0,0,15">
            <TextBox x:Name="ClientIdTextBox"
                     Style="{StaticResource ModernTextBoxStyle}"
                     FontSize="14"
                     Foreground="{StaticResource TextColor}"
                     VerticalContentAlignment="Center"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="0"/>
        </Border>

        <!-- Client Secret Label -->
        <TextBlock Grid.Row="4" 
                   Text="Client Secret:" 
                   FontSize="14" 
                   Foreground="{StaticResource TextColor}"
                   Margin="0,0,0,8"/>

        <!-- Client Secret Input -->
        <Border Grid.Row="5" 
                CornerRadius="8" 
                Background="{StaticResource SurfaceColor}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                Padding="15,12"
                MinHeight="45"
                Margin="0,0,0,20">
            <PasswordBox x:Name="ClientSecretPasswordBox"
                         FontSize="14"
                         Foreground="{StaticResource TextColor}"
                         VerticalContentAlignment="Center"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="0"/>
        </Border>

        <!-- Download Path Section -->
        <TextBlock Grid.Row="6" 
                   Text="Download Path:" 
                   FontSize="14" 
                   Foreground="{StaticResource TextColor}"
                   Margin="0,20,0,10"/>

        <!-- Download Path Input -->
        <Grid Grid.Row="7" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" 
                    CornerRadius="8" 
                    Background="{StaticResource SurfaceColor}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    Padding="15,12"
                    MinHeight="45">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                            VerticalScrollBarVisibility="Disabled">
                    <TextBlock x:Name="PathTextBlock"
                               FontSize="14"
                               Foreground="{StaticResource TextColor}"
                               VerticalAlignment="Center"
                               TextWrapping="NoWrap"/>
                </ScrollViewer>
            </Border>
            
            <Button Grid.Column="1" 
                    Content="Browse..." 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Height="36" 
                    MinWidth="100" 
                    Margin="15,0,0,0"
                    Click="BrowseButton_Click"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Style="{StaticResource AccentButtonStyle}"
                    Height="40" 
                    MinWidth="100" 
                    Margin="0,0,15,0"
                    Click="CancelButton_Click"/>
            <Button Content="Save" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Height="40" 
                    MinWidth="100"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

